{
  "type": "module",
  "scripts": {
    "test": "mocha ./tests/**/*test.js",
    "coverage": "c8 --reporter=lcov --reporter=text mocha --exit ./tests/**/*test.js"
  },
  "c8": {
    "include": "src",
    "exclude": "tests",
    "report-dir": "./coverage",
    "check-coverage": true,
    "lines": 90,
    "reporter": [
      "text",
      "cobertura"
    ]
  },
  "devDependencies": {
    "c8": "^7.7.1",
    "chai": "^4.3.10",
    "coveralls": "^3.1.1",
    "mocha": "^10.2.0"
  }
}
